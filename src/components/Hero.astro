---
import Folder from '../assets/folder.svg';
import Gift from '../assets/gift.svg';
import Lock from '../assets/lock.svg';
import Mailbox from '../assets/mailbox.svg';
import Money from '../assets/money.svg';
---

<section class="product-hero">
    <div class="container">
        <div class="d-table">
            <div class="d-table-cell center">
                <div class="hero-copy">
                  <h1 class="h1-title">Streamline Your Google Ads Campaigns</h1>
                  <p>Empowering businesses with automated solutions to maximize performance, save time, and boost ROI.</p>
                  <div class="product-cta">
                      <a href="#features" class="button button-primary">Explore Features</a>
                  </div>
                </div>
            </div>
        </div>
        <div class="hero-media">
            <img src={Money} alt="Savings">
            <img src={Gift} alt="Accurate">
            <img src={Mailbox} alt="Efficient">
            <img src={Lock} alt="Secure">
            <img src={Folder} alt="Organized">
        </div>
    </div>
 </section>

 <style lang="scss">
.product-hero {
  padding: 50px 0;
  .container {
    position: relative;
    .d-table {
      height: 500px;
    }
  }
  .hero-media{
    padding: 5px;
    border-radius: 48px;
  }
  .hero-copy{
    h1, p{
      max-width: 600px;
      margin: 20px auto;
    }
  }
  .hero-media{
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:700px) {
      img{
        &:nth-child(2), &:nth-child(3),
        &:nth-child(4){
          display: none;
        }
      }
    }
  }
}
 </style>
